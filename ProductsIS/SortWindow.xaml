<Window x:Class="ProductsIS.SortWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductsIS"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        Title="Сортировка" Height="150" Width="150" Closed="Window_Closed">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock TextWrapping="Wrap">Выбирете режим сортировки:</TextBlock>
            <RadioButton x:Name="upRadioButton">По возрастанию</RadioButton>
            <RadioButton x:Name="downRadioButton">По убыванию</RadioButton>
            <Button Margin="0,20" Content="Ок" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
